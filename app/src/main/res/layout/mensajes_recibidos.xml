<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagen_remitente"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_imagen_remitente"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/texto_nombre_remitente"
        android:text="John Doe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/imagen_remitente"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/texto_mensaje_recibido"
        android:text="hi man, how are you?"
        android:background="@drawable/rectangulo_azul_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/texto_nombre_remitente"
        app:layout_constraintLeft_toRightOf="@+id/imagen_remitente"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/tiempo_mensaje_recibido"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/texto_mensaje_recibido"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/texto_mensaje_recibido" />

</androidx.constraintlayout.widget.ConstraintLayout>